@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; Create New Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width=100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="35%">@item.Name</td>
                        <td width="35%">@item.DisplayOrder</td>
                    <td width="15%"><a class="btn btn-secondary" asp-controller="Category" asp-action="Update"><i class="bi bi-pencil-square"></i> &nbsp; Update</a></td>
                    <td width="15%"><a class="btn btn-danger" asp-controller="Category" asp-action="Delete" a><i class="bi bi-archive"></i> &nbsp; Delete</a></td>
                    </tr>
                }
        </tbody>
    </table>
</div>
